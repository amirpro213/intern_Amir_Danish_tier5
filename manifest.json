{
  "name": "Text Search",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Text Searching Extension",
  "icons": {
    "48": "icons8-chrome-60.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*.stackoverflow.com/*"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.stackoverflow.com/*"
      ],
      "run_at": "document_end"
    }
  ]
}